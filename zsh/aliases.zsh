# Create notes
alias editnote="vim ~/notes/todo.txt"
export TODO="$HOME/notes/todo.txt"
todonote() {
        echo $* >> $TODO
}
viewtodo() {
        less $TODO
}
switchtodo() {
        if [ "$1" = "" ]; then
                export TODO=$OLD_TODO
        else
                export OLD_TODO=$TODO
                export TODO=$1
        fi
}
